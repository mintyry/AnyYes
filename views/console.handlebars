<header class="antique p-3">
    <h1>{{title}}</h1>
</header>

<main class="p-3">
    {{!-- image --}}
    <figure class="gameImg" alt="">
        <img id="listingImage" src="data:image/png;base64,{{image}}" />
    </figure>
    {{!-- console name --}}
    <h2>Console: {{console_name}} by {{console_brand}} from {{year}} </h2>

    <p>Price: {{price}}</p>
    <p>Condition: {{condition}}</p>
    <p>Color: {{color}}</p>

    {{#if is_special_edition}}
    <p>Special Edition: Yes</p>
    {{else}}
    <p>Special Edition: No</p>
    {{/if}}

    <p>Posted on: {{format_date date_created}}</p>

    <p>Description: {{description}}</p>

    {{!-- add to cart button --}}
    {{#if (ifCond sold user_id currentId)}}
    <button id="Cart-Btn" class="cart-btn button is-info" style="display:none">Add to Cart</button>
    {{else}}
    <button id="Cart-Btn" class="cart-btn button is-info" style="display:block">Add to Cart</button>
    {{/if}}



    <p>{{price}}</p>



    <p>{{description}}</p>
    <p>{{condition}}</p>
    <p>{{color}}</p>
    <p>Is Special Editiion?{{is_special_edition}}</p>
    <p>Year: {{year}}</p>
    <p>{{console_brand}}</p>

</main>


<script src="/js/addToCart.js"></script>